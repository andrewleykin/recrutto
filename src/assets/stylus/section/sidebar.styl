.sidebar
  height 100%
  background-image linear-gradient(to top, blue-color 0%, #005b82 100%)
  padding 30px 0

.sidebar__user
  padding 0 20px
  display flex
  align-items center
  margin-bottom 75px

.sidebar__user-photo
  margin-right 10px

.sidebar__user-info
  margin-right auto

.sidebar__user-name
  font-size 14px
  color white
  display block
  margin-bottom 10px

.sidebar__user-status
  font-size 10px
  color green-color
  text-transform uppercase
  position relative
  padding-left 20px
  &:before
    content ''
    display block
    width 13px
    height 13px
    position absolute
    left 0
    top -3px
    background green-color
    border-radius 50%

.sidebar__item
  &.active
    .sidebar__link:before,
    .sidebar__link:after,
    .sidebar__icon,
    .sidebar__arrow
      opacity 1
    .sidebar__arrow
      transform rotate(180deg)
    .sidebar__text
      color white
    .sidebar__sublist
      height auto
      padding-top 10px
    &.bid
      .sidebar__sublist
        padding-bottom 10px
      .sidebar__subitem
        &.active
          margin-bottom 0
      .sidebar__sublink
        padding 15px 5px

.sidebar__link
  display flex
  align-items center
  padding 13px 20px
  max-height 42px
  position relative
  &:before,&:after
    content ''
    position absolute
    top 0
    left 0
    display block
    height 100%
    opacity 0
    @extend .trs
  &:before
    width 100%
    background rgba(black, 0.05)
  &:after
    width 4px
    background-color yellow-color
  &:hover
    .sidebar__icon,
    .sidebar__arrow
      opacity 1
    .sidebar__text
      color white

.sidebar__icon
  margin-right 10px
  opacity 0.6
  @extend .trs

.sidebar__text
  color nav-color
  font-size 12px
  margin-right auto
  @extend .trs

.sidebar__arrow
  opacity 0.7
  @extend .trs

.sidebar__letter
  width 22px
  height 22px
  background-color green-color
  border-radius 50%
  @extend .flex-center

.sidebar__letter-cnt
  color white
  font-size 12px
  text-transform uppercase

.sidebar__sublist
  padding-left 45px
  height 0
  overflow hidden
  @extend .trs

.sidebar__subitem
  @extend .trs
  &.active
    margin-bottom 15px

.sidebar__subsublist
  padding-top 5px
  padding-left 15px
  height 0
  overflow hidden
  @extend .trs
  &.active
    height auto

.sidebar__sublink
  cursor pointer
  position relative
  padding 5px
  color nav-text-color
  font-size 12px
  display block
  @extend .trs
  &.active,
  &:hover
    color white

.sidebar__toggle-block
  position absolute
  top 15px
  right 20px

.sidebar__toggle-label
  position relative
  display inline-block
  width 28px
  height 13px

.sidebar__toggle-input
  display none
  &:checked
    & + .sidebar__toggle
      background-color light-green-color
      &:before
        transform translateX(16px)
  &:focus
    & + .sidebar__toggle
      box-shadow 0 0 1px #2196F3

.sidebar__toggle
  position absolute
  cursor pointer
  top 0
  left 0
  right 0
  bottom 0
  background-color blue-color
  transition .4s
  border-radius 5px
  &:before
    position absolute
    content ''
    height 17px
    width 17px
    left -4px
    bottom -2px
    background green-color
    transition .4s
    border-radius 50%
