.card
  padding 40px 30px 60px
  display flex
  position relative
  height 100%

.card__ellipsis
  position absolute
  right 15px
  top 25px

.card__photo
  margin-right 25px
  flex none

.card__info
  max-width 250px

.card__name
  color light-gray-color
  font-size 18px
  font-weight 600
  margin-bottom 15px

.card__post
  color light-gray-color
  font-size 12px
  font-weight 500
  text-transform uppercase
  margin-bottom 20px

.card__place
  color blue-color
  text-decoration underline
  display block
  margin-top 3px

.card__phone
  color light-gray-color
  font-size 18px
  font-weight 500
  display block
  @extend .trs
  &:hover
    color gray-color
  &+&
    margin-top 5px

.card__email
  display block
  margin-top 20px
  color blue-color
  font-size 16px
  text-decoration underline
  @extend .trs
  &:hover
    color light-blue-color