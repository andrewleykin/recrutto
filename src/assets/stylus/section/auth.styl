.auth
  position relative
  size(100%)
  @extend .flex-center
  min-height 700px

.auth__bg
  position absolute
  top 0
  left 0
  size(100%)
  z-index -1

.auth__row
  display flex
  height 100%

.auth__col
  width 100%
  max-width 25%
  position relative
  &:before
    content ''
    display block
    width 100%
    height 11px
    position absolute
    top 0
    left 0
  &:after
    content ''
    display block 
    width 4px
    height 100%
    position absolute
    top 0
    left 0
    background rgba(black, 0.05)
    z-index -1
  &:nth-child(1)
    &:before
      background-color blue-color
    &:after
      display none
  &:nth-child(2)
    &:before
      background-color green-color
  &:nth-child(3)
    &:before
      background-color light-green-color
  &:nth-child(4)
    &:before
      background-color yellow-color
  &:nth-child(5)
    &:before
      background-color red-color

.auth__content
  max-width 363px
  width 100%

.auth__header
  color light-gray-color
  text-align center
  margin-bottom 20px

.auth__title
  font-size 24px
  font-weight 700

.auth__subtitle
  font-size 10px
  text-transform uppercase

.auth__noacc
  display flex

.auth__noacc-text
  font-size 12px
  color lighten-gray-color
  display block
  margin-right 5px

.auth__link
  color blue-color
  font-size 12px
  @extend .trs
  &:hover
    color light-blue-color
  
.auth__social
  padding 17px 20px
  border-bottom 1px solid border-color

.auth__social-block
  @extend .flex-sb-center
  border-radius 3px
  padding 13px 20px 13px 17px
  position relative
  z-index 0
  @extend .trs
  &:before
    content ''
    display block
    width 43px
    height 43px
    background rgba(black, 0.1)
    position absolute
    top 0
    left 0
    border-top-right-radius 3px
    border-bottom-right-radius 3px
  &+&
    margin-top 10px
  &:nth-child(1)
    background-color blue-color
    &:hover
      background-color lighten(blue-color, 20%)
  &:nth-child(2)
    background-color light-blue-color
    &:hover
      background-color lighten(light-blue-color, 20%)

.auth__social-text
  color white
  font-size 12px
  text-transform uppercase

.auth__form
  padding 13px 20px 13px 17px

.auth__group
  &+&
    margin-top 17px

.auth__sublabel
  @extend .flex-sb-center
  margin-bottom 10px

.auth__sublabel-text
  color lighten-gray-color
  font-size 10px
  text-transform uppercase
  display flex
  &:after
    content '*'
    color red-color
    font-size 14px

.auth__label
  top 15px
  left 12px
  font-size 12px
  color lighten-gray-color

.auth__input
  border-radius 3px
  border 1px solid border-color
  background-color white
  width 100%
  padding 11px 12px

.auth__btn
  margin-top 20px
  border-radius 3px
  background-color blue-color
  @extend .flex-center
  color white
  font-size 12px
  text-transform uppercase
  height 43px
  width 100%
  margin-bottom 15px
  cursor pointer
  @extend .trs
  &:hover
    background-color light-blue-color

.auth__check-input
  display none
  &:checked
    &+.auth__check-label
      &:after
        opacity 1

.auth__check-label
  color light-gray-color
  font-size 12px
  padding-left 30px
  position relative
  cursor pointer
  &:before, &:after
    content ''
    display block
    width 19px
    height 19px
    position absolute
    top -2px
    left 0
    @extend .trs
  &:before
    border-radius 3px
    background-color green-color
  &:after
    background url('/static/img/general/check.png') center center no-repeat
    opacity 0